{
  "manifest_version": 3,
  "name": "Live Audio Translator",
  "version": "1.0.0",
  "description": "Translate audio from any tab in real-time",
  "permissions": [
    "tabCapture",
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "offscreen",
    "downloads"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}